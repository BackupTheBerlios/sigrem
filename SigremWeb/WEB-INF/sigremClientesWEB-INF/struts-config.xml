<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 1.0//EN"
  "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

  <data-sources>
    <data-source type="org.apache.commons.dbcp.BasicDataSource">
      <set-property property="driverClassName"
        value="com.mysql.jdbc.Driver" />
      <set-property property="url"
        value="jdbc:mysql://localhost/sigremBD" />
      <set-property property="username"
        value="root"/>
      <set-property property="password"
        value="root-pass"/>
    </data-source>
  </data-sources>

  <form-beans>
    <form-bean name="multaForm"
      type="mcl.MultaForm" />
  </form-beans>

  <global-forwards>
    <forward name="listamultas" path="/ListaMultas"/>
  </global-forwards>

  <action-mappings>

    <!-- Mapeo para las acciones del perfil CLIENTE-->
    <action path="/ListaClientes"
      type="mcl.ListaClientesAction"
      scope="request" >
      <forward name="success" path="/listaclientes.jsp"/>
    </action>

    <action path="/VerContratosCliente"
      type="mco.DameContratoAction"
      scope="request" >
      <forward name="success" path="/listacontratos.jsp"/>
      <forward name="error" path="/errorcontrato.jsp"/>
    </action>

    <action path="/VerMultasContrato"
      type="mmu.DameMultaAction"
      scope="request" >
      <forward name="success" path="/listamultas.jsp"/>
      <forward name="error" path="/errormulta.jsp"/>
    </action>

    <action path="/VerRecursosMulta"
      type="mre.DameRecursoAction"
      scope="request">
      <forward name="success" path="/listarecursos.jsp"/>
      <forward name="error" path="/errorrecurso.jsp"/>
    </action>

  </action-mappings>

</struts-config>
